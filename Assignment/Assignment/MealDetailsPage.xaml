<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment.MealDetailsPage"
             Title="MealDetailsPage">
    <VerticalStackLayout>
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="True"/>


        <Label Text="{Binding Meal}"></Label>
        <Image Source="{Binding MealThumb}" Aspect="AspectFit"/>
        <Label Text="{Binding Instructions}"></Label>
    </VerticalStackLayout>
</ContentPage>